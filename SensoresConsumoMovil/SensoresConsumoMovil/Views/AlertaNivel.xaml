<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensoresConsumoMovil.Views.AlertaNivel"
             xmlns:viewmodel="clr-namespace:SensoresConsumoMovil.ViewModel">
    <ContentPage.BindingContext>
        <viewmodel:AlertaNivelViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Control de Nivel de Alerta" FontSize="24" FontAttributes="Bold" />

            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />

            <Label Text="{Binding StatusMessage}" />

            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Seleccione nivel de alerta:" FontAttributes="Bold" />
                    <Picker Title="Nivel de alerta" 
                            ItemsSource="{Binding NivelesAlerta}" 
                            SelectedItem="{Binding SelectedNivel}" />

                    <Button Text="Aplicar nivel" Command="{Binding ApplyNivelCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Consultar estado" Command="{Binding CheckAlertaCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>