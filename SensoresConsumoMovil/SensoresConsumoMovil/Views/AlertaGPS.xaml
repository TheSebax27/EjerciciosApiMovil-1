<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensoresConsumoMovil.Views.AlertaGPS"
             xmlns:viewmodel="clr-namespace:SensoresConsumoMovil.ViewModel">
    <ContentPage.BindingContext>
        <viewmodel:AlertaGpsViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Estado del GPS" FontSize="24" FontAttributes="Bold" />

            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />

            <Label Text="{Binding StatusMessage}" />

            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Control de GPS" FontAttributes="Bold" />
                    <Switch IsToggled="{Binding IsGpsActive}" />
                    <Label Text="GPS Activado" IsVisible="{Binding IsGpsActive}" />
                    <Label Text="GPS Desactivado" IsVisible="{Binding !IsGpsActive}" />
                    <Button Text="Aplicar cambios" Command="{Binding ToggleGpsCommand}" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Consultar estado GPS" Command="{Binding CheckGpsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>