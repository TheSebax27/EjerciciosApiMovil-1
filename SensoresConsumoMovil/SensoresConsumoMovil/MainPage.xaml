<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensoresConsumoMovil.MainPage"
             Title="Sensores de Alerta">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label 
                Text="Aplicación de Sensores"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label 
                Text="Seleccione el tipo de alerta que desea monitorear"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button 
                Text="Alerta de Nivel (Vibración)"
                Clicked="OnAlertaNivelClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                HeightRequest="60"
                CornerRadius="10" />

            <Button 
                Text="Alerta GPS"
                Clicked="OnAlertaGPSClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HeightRequest="60"
                CornerRadius="10" />

            <Button 
                Text="Alerta de Sonido"
                Clicked="OnAlertaSonidoClicked"
                BackgroundColor="#FF9800"
                TextColor="White"
                HeightRequest="60"
                CornerRadius="10" />

            <Label 
                Text="Esta aplicación monitorea diferentes tipos de alertas y activa los sensores correspondientes según las respuestas de la API."
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0, 20, 0, 0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>