<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewSebas="clr-namespace:ProductoConsumoMovil.ViewModel"
             x:Class="ProductoConsumoMovil.Views.ListarCategorias"
           >

    <ContentPage.BindingContext>
        <ViewSebas:CategoriasViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Button Text="Cargar CategorÃ­as" 
                Command="{Binding CargarCategoriasCommand}"
                Grid.Row="0"
                Margin="0,0,0,10"/>

        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Categorias}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding nombreCategoria}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding descripcion}" FontSize="14"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>