<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewSebas="clr-namespace:ProductoConsumoMovil.ViewModel"
             x:Class="ProductoConsumoMovil.Views.Categorias">
    <ContentPage.BindingContext>
        <ViewSebas:CategoriasViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Nombre"/>
            <Entry Placeholder="Nombre" Text="{Binding nuevaCategoria.nombreCategoria}"/>
            <Label Text="Descripcion"/>
            <Entry Placeholder="Descripcion" Text="{Binding nuevaCategoria.descripcion}" Margin="0,5"/>

            <Label/>
            <Button Text="Registrar Categoria" Command="{Binding AgregarCategoriasCommand}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>