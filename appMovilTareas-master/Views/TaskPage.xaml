<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appMovilTareas.Views.TaskPage"
             BackgroundColor="#f5f5f5"
             Title="Mis Tareas">

    <Grid RowDefinitions="Auto,*,Auto" Padding="15">
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="10">
            <Label Text="Mis Tareas"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,5">
                <Label Text="📌 Tareas de Hoy" 
                       FontSize="18"
                       TextColor="#666666"
                       VerticalOptions="Center"/>

                <Frame Grid.Column="1" 
                       BackgroundColor="#3498db" 
                       CornerRadius="20" 
                       HeightRequest="40" 
                       WidthRequest="40" 
                       Padding="0" 
                       HorizontalOptions="End">
                    <Label Text="+" 
                           TextColor="White" 
                           FontSize="24" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddNewTaskCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <BoxView HeightRequest="1" 
                     BackgroundColor="#dddddd" 
                     HorizontalOptions="Fill"/>
        </VerticalStackLayout>

        <!-- Task List -->
        <CollectionView Grid.Row="1" 
                      ItemsSource="{Binding Tareas}"
                      Margin="0,10,0,0"
                      SelectionMode="Single"
                      SelectionChangedCommand="{Binding TaskSelectedCommand}"
                      SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
                    <Image Source="empty_tasks.png" HeightRequest="120" WidthRequest="120" />
                    <Label Text="No hay tareas pendientes" 
                           FontSize="18" 
                           TextColor="#999999"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               HasShadow="True"
                               Padding="15"
                               Margin="2,5">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <!-- Status Indicator -->
                                <Frame Grid.RowSpan="2" 
                                       Grid.Column="0"
                                       WidthRequest="4" 
                                       HeightRequest="40" 
                                       CornerRadius="2" 
                                       Padding="0"
                                       Margin="0,0,10,0"
                                       BackgroundColor="{Binding EstadoColor}"/>

                                <!-- Task Title -->
                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Text="{Binding descripcion}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       LineBreakMode="TailTruncation"
                                       TextColor="#333333"/>

                                <!-- Due Date -->
                                <Label Grid.Column="1"
                                       Grid.Row="1"
                                       Text="{Binding FechaAsignada, StringFormat='📅 {0:dd/MM/yyyy}'}"
                                       FontSize="14"
                                       TextColor="#666666"/>

                                <!-- Priority Indicator -->
                                <Label Grid.Column="2"
                                       Grid.Row="0"
                                       Text="{Binding PrioridadIcono}"
                                       FontSize="20"
                                       HorizontalOptions="End"/>

                                <!-- Additional Info Row -->
                                <StackLayout Grid.Column="1" 
                                             Grid.ColumnSpan="2"
                                             Grid.Row="2"
                                             Orientation="Horizontal"
                                             Spacing="15"
                                             Margin="0,8,0,0">
                                    <Label Text="{Binding CategoriaNombre}" 
                                           FontSize="12" 
                                           TextColor="#3498db"/>
                                    <Label Text="{Binding Estado}" 
                                           FontSize="12" 
                                           TextColor="#666666"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Footer with Tab Menu -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               CornerRadius="30" 
               HasShadow="True"
               Margin="20,10,20,15"
               BorderColor="Transparent"
               HeightRequest="60">
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="2">
                    <Label Text="🏠" FontSize="24" HorizontalOptions="Center"/>
                    <Label Text="Inicio" FontSize="12" TextColor="#666666" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="2">
                    <Label Text="📋" FontSize="24" HorizontalOptions="Center" TextColor="#3498db"/>
                    <Label Text="Tareas" FontSize="12" TextColor="#3498db" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="2">
                    <Label Text="📊" FontSize="24" HorizontalOptions="Center"/>
                    <Label Text="Reportes" FontSize="12" TextColor="#666666" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center" Spacing="2">
                    <Label Text="👤" FontSize="24" HorizontalOptions="Center"/>
                    <Label Text="Perfil" FontSize="12" TextColor="#666666" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>